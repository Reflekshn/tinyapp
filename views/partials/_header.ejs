<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if (!user.email) { %>
          <form method="GET" action="/login">
            <button type="submit" class="btn btn-outline-primary">Login</button>
          </form>
          <form method="GET" action="/register">
            <button type="submit" class="btn btn-outline-primary">Register New User</button>
          </form>
        <% } else { %>
          <p class="nav-item nav-link active">Logged in as: <%= user.email %></p>
          <form method="POST" action="/logout">
            <button type="submit" class="btn btn-outline-primary">Logout</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>